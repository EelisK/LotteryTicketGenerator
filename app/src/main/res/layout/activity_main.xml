<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context="com.eelis.myapplication.MainActivity"
    tools:menu="@drawable/lottopallo">
    <!--android:background="@drawable/goldbars"-->

    <!--<Switch
        android:text="Tuplaus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tuplausVipu"
        android:textColor="@color/moneyGreen"
        android:layout_marginBottom="26dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />-->

    <TextView
        android:text="@string/lottorivi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textColor="@color/textColor"
        android:shadowColor="@color/shadowColor"
        android:shadowRadius="5"
        android:shadowDy="5"
        android:shadowDx="5"
        android:id="@+id/rivi"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/lottoButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:color/holo_green_light"
        android:id="@+id/lottoButton"
        android:adjustViewBounds="false"
        android:visibility="visible"
        android:text="@string/btntxt"
        android:textColor="@color/background"
        android:background="@color/colorPrimaryDark"
        android:layout_marginBottom="38dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
